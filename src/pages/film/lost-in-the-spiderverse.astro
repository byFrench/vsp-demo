---
import Layout from '../../layouts/Layout.astro';
import E_Head from '../../components/Emissions/Head.astro';
import E_Video from '../../components/Emissions/Video.astro';
import Partners from '../../components/Partners.astro';

var eName = 'Lost in the Metaverse';
var eResume = `Akane & Lucky got lost in many universes and meet their multiversal variants. 
Their long journey must be so bizarre! The problem approaches them and how Akane & Lucky will handle this situation.`;
var ePartner = "A 336 film. Filmed in VRChat. This movie doesn't affiliate with VRChat.";

var twitch = '';
var participate = '';

const video = {
	single: {
		width: '450',
		height: '300'
	},
	playlist: {
		width: '600',
		height: '350'
	}
};
---

<Layout
	title={eName + ' / Films'}
	description="! Demonstration of the code/design of a template called 'TalkShowTemplate' - this site is not a real website in use !"
	robots="noindex, nofollow"
>
	<E_Head
		time=`${import.meta.env.PUBLIC_NAME} x 336`
		name={eName}
		resume={eResume}
		twitch={twitch}
		participate={participate}
		partner={ePartner}
	/>
	<p class="text-2xl text-center align-center mt-10">Teaser & Trailer</p>
	<div class="flex justify-center text-center align-center mb-5 ml-5">
		<E_Video id="o7TQzcODnio" width={video.single.width} height={video.single.height} />
		<E_Video id="o7TQzcODnio" width={video.single.width} height={video.single.height} />
	</div>
	<p class="text-2xl text-center align-center">Last release</p>
	<div class="flex flex-nowrap justify-center mb-14 mr-10" style="margin-left: 5.5rem !important;">
		<E_Video id="o7TQzcODnio" width={video.playlist.width} height={video.playlist.height} />
	</div>
	<Partners />
</Layout>
