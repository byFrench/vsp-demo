---
import { Image } from 'astro:assets';
import Placeholder from '../assets/img/components/partners/200x200.svg';
var ghUrl = import.meta.env.PUBLIC_GITHUB_URL;
---

<div class="flex items-center justify-center h-full w-full mb-10 mt-10">
	<div class="text-center">
		<h1
			class="mb-4 text-2xl font-extrabold leading-none tracking-tight dark:text-slate-100 md:text-2xl lg:text-3xl"
		>
			<span
				class="underline underline-offset-3 decoration-8 decoration-sky-700 dark:decoration-sky-700"
			>
				PARTNERS & AFFILIATES
			</span>
		</h1>
		<div class="flex flex-nowrap">
			<a href={ghUrl} target="_blank" title="Join the NoName Discord">
				<Image src={Placeholder} alt="Logo" class="mt-3 me-5" draggable="false" />
			</a>
			<a href={ghUrl} target="_blank" title="Join the BlablaName on Twitch">
				<Image src={Placeholder} alt="Logo" class="mt-3 me-5" draggable="false" />
			</a>
			<a href={ghUrl} target="_blank" title="Join the LaoName Discord">
				<Image src={Placeholder} alt="Logo" class="mt-3 me-5" draggable="false" />
			</a>
		</div>
	</div>
</div>
